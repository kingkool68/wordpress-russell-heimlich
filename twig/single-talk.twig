{% extends 'base.twig' %}

{% block content %}
	<article>
		<header class="the-header">
			<h1 class="single-title">{{ the_title }}</h1>
			{% if display_date %}
				<p>
					Presented on <time class="date" datetime="{{ machine_date|esc_attr }}">{{ display_date }}</time> at
					{% if event_url %}
						<a href="{{ event_url|esc_url }}">{{ event_name}}</a>
					{% else %}
						{{ event_name }}
					{% endif %}
				</p>
			{% endif %}
		</header>

		{% if event_name %}
			<p class="event-name">

			</p>
		{% endif %}

		<div class="the-content wysiwyg">
			{{ video_embed }}

			{% if slides_url %}
				<p><a href="{{ slides_url|esc_url }}">View Slides</a></p>
			{% endif %}

			{{ the_content }}
		</div>

		<footer>

		</footer>
	</article>
{% endblock %}
