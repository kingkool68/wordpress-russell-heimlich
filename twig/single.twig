{% extends 'base.twig' %}

{% block content %}

	<small>{{ display_date }} &bull; 11 comments</small>
	<h1>{{ the_title }}</h1>

	<div class="the-content wysiwyg">
		{{ the_content }}
	</div>

	<div class="post-metadata">
		{% if display_datetime %}
			<p>
				Published <time class="date" datetime="{{ machine_date|esc_attr }}">{{ display_datetime }}</time>
			</p>
		{% endif %}
	</div>

	{% if comments %}
		<ol class="comments">
			{{ comments }}
		</ol>
	{% endif %}
	{{ comment_form }}
{% endblock %}
