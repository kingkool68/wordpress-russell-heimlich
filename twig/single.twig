{% extends 'base.twig' %}

{% block content %}

	<article class="the-content">
		<header class="the-header">
			{% if comment_count %}
				<small>{{ comment_count }} {{ comment_label }}</small>
			{% endif %}
			<h1 class="single-title">{{ the_title }}</h1>
		</header>

		<div class="the-content wysiwyg">
			{{ the_content }}
		</div>

		<footer class="post-metadata">
			{% if display_datetime %}
				<p>
					Published <time class="date" datetime="{{ machine_date|esc_attr }}">{{ display_datetime }}</time>
				</p>
			{% endif %}
		</footer>
	</article>

	{{ comments_section }}

{% endblock %}
